---
import 'devicon/devicon.min.css';

interface Props {
    reverse?: boolean;
}

const { reverse } = Astro.props;
---

<div class="w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]">
    <ul class={"flex items-center justify-center gap-24 md:justify-start px-12 " + (reverse ? "animate-infinite-scroll-reverse" : "animate-infinite-scroll")} >
        <slot></slot>
    </ul>
    <ul class={"flex items-center justify-center gap-24 md:justify-start px-12 " + (reverse ? "animate-infinite-scroll-reverse" : "animate-infinite-scroll")} aria-hidden="true">
        <slot></slot>
    </ul>
</div>
