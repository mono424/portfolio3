---
import Layout from '../layouts/Layout.astro';
import Editor from '../components/Editor.astro';
import HeadBar from '../components/HeadBar.astro';
import Header from '../components/Header.astro';
import Slider from '../components/Slider.astro';
import LangCard from '../components/LangCard.astro';
---

<Layout title="Welcome to Astro.">
	<main class="pb-96">
    <HeadBar />
	  <Header src="/img/me.jpg">
      <div slot="title">
        <h1><b>Khadim</b> Fall</h1>
        <p>Web Developer & Tech Enthusiast</p>
      </div>

      <div slot="text">
        <div class="hello-hw"></div>
        <p class="hello-text">
          I am a Web and App Developer, Tech-Enthusiast and Maker, Photographer and Thinker based in Munich.
          <br><br>
          You can find me on social media:
        </p>
        <div class="social">
          <a target="_blank" href="https://www.linkedin.com/in/khadim-fall-137850127/"><font-awesome-icon :icon="['fab', 'linkedin-in']" /></a>
          <a target="_blank" href="https://www.instagram.com/khadim0602/"><font-awesome-icon :icon="['fab', 'instagram']" /></a>
          <a target="_blank" href="https://github.com/mono424"><font-awesome-icon :icon="['fab', 'github']" /></a>
        </div>
        <p class="hello-text">
          Or drop me a mail: <a href="mailto:info@khadimfall.com">info@khadimfall.com</a>
        </p>
      </div>
		</Header>
    <div class="mb-12">
      <Slider>
        <!-- Languages and Frameworks -->
        <LangCard icon="go-plain" />
        <LangCard icon="javascript-plain" />
        <LangCard icon="typescript-plain" />
        <LangCard icon="dart-plain" />
        <LangCard icon="rust-plain" />
        <LangCard icon="lua-plain" />
        <LangCard icon="tailwindcss-plain" />
        <LangCard icon="storybook-plain" />
        <LangCard icon="flutter-plain" />
        <LangCard icon="vuejs-plain" />
        <LangCard icon="nextjs-original" />
        <LangCard icon="svelte-plain" />
      </Slider>
      <Slider reverse>
        <LangCard icon="postgresql-plain" />
        <LangCard icon="mongodb-plain" />
        <LangCard icon="docker-plain" />
        <LangCard icon="kubernetes-plain" />
        <LangCard icon="k3s-plain" />
        <LangCard icon="neo4j-plain" />
        <LangCard icon="terraform-plain" />
        <LangCard icon="googlecloud-plain" />
        <LangCard icon="github-original" />
      </Slider>
    </div>
		<Editor />
	</main>
</Layout>

<script>
import VanillaTilt from 'vanilla-tilt';
const elements = document.querySelectorAll("[data-tilt]");
VanillaTilt.init([...elements] as HTMLElement[]);
</script>

<style>
@media screen and (max-width: 570px) {
  h1 {
    font-size: 16px !important;
  }
  p {
    font-size: 12px !important;
  }

  p.hello-text {
    font-size: 14px !important;
  }

  .social > a {
    font-size: 22px !important;
  }
}

body {
  opacity: 0.8;
  background-image: linear-gradient(#1b1c39 1px, transparent 1px), linear-gradient(to right, #1b1c39 1px, #13151a 1px);
  background-size: 20px 20px;
}

h1 {
  margin: 0;
  letter-spacing: 5px;
  font-weight: normal;
}

p {
  margin: 0;
  font-weight: normal;
  letter-spacing: 2px;
  font-size: 14px;
}

.hello-hw {
  width: 100px;
  height: 40px;
  background-image: url(/img/hello_white.png);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center left;
  margin: 30px 0 16px 0;
}

.hello-text {
  color: #fffffa7c;
  /* text-align: justify; */
  font-size: 18px;
  line-height: 1.6;
}

.social {
  display: flex;
}

.social > a {
  color: #B75D69;
  margin: 12px 18px 12px 4px;
  font-size: 24px;
}

a {
  color: #B75D69;
  text-decoration: none;
}
</style>
